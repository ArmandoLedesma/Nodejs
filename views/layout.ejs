<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title><%= title %> - BiblioTech</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-50">
    <div class="flex h-screen">
      <!-- Sidebar para móvil -->
      <div class="lg:hidden">
        <div
          id="overlay"
          class="fixed inset-0 z-20 bg-gray-600 bg-opacity-75 backdrop-blur-sm transition-all ease-in-out duration-300 hidden"
        ></div>
        <div
          id="mobile-menu"
          class="fixed inset-y-0 left-0 w-64 bg-gradient-to-b from-indigo-800 to-indigo-700 transform -translate-x-full transition-all ease-in-out duration-300 z-30 shadow-xl border-r border-indigo-800"
        >
          <!-- Contenido del sidebar móvil -->
          <div class="flex flex-col h-full p-4">
            <div class="flex items-center justify-between mb-8">
              <a href="/" class="flex items-center space-x-2 group">
                <i
                  class="fas fa-book-open text-2xl text-indigo-200 transition-colors duration-200 group-hover:text-white"
                ></i>
                <h1 class="text-2xl font-bold text-white">BiblioTech</h1>
              </a>
              <button
                id="close-sidebar"
                class="text-indigo-200 hover:text-white transition-colors duration-200"
              >
                <i class="fas fa-times text-xl"></i>
              </button>
            </div>
            <!-- Navegación móvil -->
            <nav class="flex-1 space-y-4">
              <a
                href="/"
                class="flex items-center space-x-3 p-3 rounded-lg hover:bg-indigo-600/50 active:bg-indigo-700/50 transition-all duration-200 text-white group <%= path === '/' ? 'bg-indigo-800/50 shadow-lg' : '' %>"
              >
                <i
                  class="fas fa-home text-indigo-300 group-hover:text-white transition-colors duration-200"
                ></i>
                <span
                  class="transform translate-x-0 transition-transform duration-200"
                  >Panel de Control</span
                >
              </a>
              <div class="border-t border-indigo-600/50 my-2"></div>
              <a
                href="/books"
                class="flex items-center space-x-3 p-3 rounded-lg hover:bg-indigo-600/50 active:bg-indigo-700/50 transition-all duration-200 text-white group <%= path === '/books' ? 'bg-indigo-800/50 shadow-lg' : '' %>"
              >
                <i
                  class="fas fa-book text-indigo-300 group-hover:text-white transition-colors duration-200"
                ></i>
                <span
                  class="transform translate-x-0 transition-transform duration-200"
                  >Libros</span
                >
              </a>
              <a
                href="/authors"
                class="flex items-center space-x-3 p-3 rounded-lg hover:bg-indigo-600/50 active:bg-indigo-700/50 transition-all duration-200 text-white group <%= path === '/authors' ? 'bg-indigo-800/50 shadow-lg' : '' %>"
              >
                <i
                  class="fas fa-user-edit text-indigo-300 group-hover:text-white transition-colors duration-200"
                ></i>
                <span
                  class="transform translate-x-0 transition-transform duration-200"
                  >Autores</span
                >
              </a>
              <a
                href="/categories"
                class="flex items-center space-x-3 p-3 rounded-lg hover:bg-indigo-600/50 active:bg-indigo-700/50 transition-all duration-200 text-white group <%= path === '/categories' ? 'bg-indigo-800/50 shadow-lg' : '' %>"
              >
                <i
                  class="fas fa-tags text-indigo-300 group-hover:text-white transition-colors duration-200"
                ></i>
                <span
                  class="transform translate-x-0 transition-transform duration-200"
                  >Categorías</span
                >
              </a>
              <a
                href="/publishers"
                class="flex items-center space-x-3 p-3 rounded-lg hover:bg-indigo-600/50 active:bg-indigo-700/50 transition-all duration-200 text-white group <%= path === '/publishers' ? 'bg-indigo-800/50 shadow-lg' : '' %>"
              >
                <i
                  class="fas fa-building text-indigo-300 group-hover:text-white transition-colors duration-200"
                ></i>
                <span
                  class="transform translate-x-0 transition-transform duration-200"
                  >Editoriales</span
                >
              </a>
            </nav>
          </div>
        </div>
      </div>
      <!-- Sidebar desktop -->
      <div class="hidden lg:flex">
        <div
          class="w-16 hover:w-64 flex-shrink-0 transition-all duration-300 ease-in-out bg-gradient-to-b from-indigo-800 to-indigo-700 group border-r border-indigo-800"
        >
          <div class="p-4 flex flex-col h-full">
            <a href="/" class="flex items-center space-x-4 mb-8">
              <i
                class="fas fa-book-open text-2xl text-indigo-200 flex-shrink-0"
              ></i>
              <h1
                class="text-2xl font-bold text-white overflow-hidden opacity-0 transform scale-95 group-hover:scale-100 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap"
              >
                BiblioTech
              </h1>
            </a>
            <nav class="flex-1 space-y-4">
              <a
                href="/"
                class="flex items-center space-x-4 p-3 rounded-lg hover:bg-indigo-600 transition-colors text-white <%= path === '/' ? 'bg-indigo-800' : '' %>"
              >
                <i class="fas fa-home text-indigo-300 flex-shrink-0"></i>
                <span
                  class="overflow-hidden opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap"
                  >Panel de Control</span
                >
              </a>
              <div class="border-t border-indigo-600 my-2"></div>
              <a
                href="/books"
                class="flex items-center space-x-4 p-3 rounded-lg hover:bg-indigo-600/50 active:bg-indigo-700/50 transition-all duration-200 text-white <%= path === '/books' ? 'bg-indigo-800/50 shadow-lg' : '' %>"
              >
                <i
                  class="fas fa-book text-indigo-300 flex-shrink-0 group-hover:text-white transition-colors duration-200"
                ></i>
                <span
                  class="overflow-hidden opacity-0 transform -translate-x-3 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap"
                  >Libros</span
                >
              </a>
              <a
                href="/authors"
                class="flex items-center space-x-4 p-3 rounded-lg hover:bg-indigo-600/50 active:bg-indigo-700/50 transition-all duration-200 text-white <%= path === '/authors' ? 'bg-indigo-800/50 shadow-lg' : '' %>"
              >
                <i
                  class="fas fa-user-edit text-indigo-300 flex-shrink-0 group-hover:text-white transition-colors duration-200"
                ></i>
                <span
                  class="overflow-hidden opacity-0 transform -translate-x-3 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap"
                  >Autores</span
                >
              </a>
              <a
                href="/categories"
                class="flex items-center space-x-4 p-3 rounded-lg hover:bg-indigo-600/50 active:bg-indigo-700/50 transition-all duration-200 text-white <%= path === '/categories' ? 'bg-indigo-800/50 shadow-lg' : '' %>"
              >
                <i
                  class="fas fa-tags text-indigo-300 flex-shrink-0 group-hover:text-white transition-colors duration-200"
                ></i>
                <span
                  class="overflow-hidden opacity-0 transform -translate-x-3 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap"
                  >Categorías</span
                >
              </a>
              <a
                href="/publishers"
                class="flex items-center space-x-4 p-3 rounded-lg hover:bg-indigo-600/50 active:bg-indigo-700/50 transition-all duration-200 text-white <%= path === '/publishers' ? 'bg-indigo-800/50 shadow-lg' : '' %>"
              >
                <i
                  class="fas fa-building text-indigo-300 flex-shrink-0 group-hover:text-white transition-colors duration-200"
                ></i>
                <span
                  class="overflow-hidden opacity-0 transform -translate-x-3 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-300 whitespace-nowrap"
                  >Editoriales</span
                >
              </a>
            </nav>
          </div>
        </div>
      </div>

      <!-- Contenido principal -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Botón menú móvil -->
        <header class="lg:hidden bg-white shadow-sm sticky top-0 z-10">
          <div class="flex items-center justify-between p-4">
            <button
              id="open-sidebar"
              class="text-gray-600 hover:text-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 rounded-lg p-2 transition-colors duration-200"
            >
              <i class="fas fa-bars text-xl"></i>
            </button>
            <h2 class="text-xl font-semibold text-gray-800"><%= title %></h2>
          </div>
        </header>

        <!-- Área de scroll -->
        <main class="flex-1 overflow-y-auto"><%- body %></main>
      </div>
    </div>

    <!-- Scripts -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      AOS.init({
        duration: 600,
        once: true,
        offset: 100,
      });

      // Manejo del sidebar móvil
      document.addEventListener("DOMContentLoaded", function () {
        const mobileMenu = document.getElementById("mobile-menu");
        const overlay = document.getElementById("overlay");
        const openButton = document.getElementById("open-sidebar");
        const closeButton = document.getElementById("close-sidebar");

        function openMenu() {
          mobileMenu.classList.remove("-translate-x-full");
          overlay.classList.remove("hidden");
        }

        function closeMenu() {
          mobileMenu.classList.add("-translate-x-full");
          overlay.classList.add("hidden");
        }

        openButton?.addEventListener("click", openMenu);
        closeButton?.addEventListener("click", closeMenu);
        overlay?.addEventListener("click", closeMenu);
      });
    </script>
  </body>
</html>
